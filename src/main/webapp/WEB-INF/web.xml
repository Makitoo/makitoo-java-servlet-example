<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
        version="3.0">

    <servlet>
        <servlet-name>UsersAPI</servlet-name>
        <servlet-class>com.makitoo.java.servlet.api.UsersAPI</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UsersAPI</servlet-name>
        <url-pattern>/users/*</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>
            com.makitoo.java.servlet.MakitooServletContextListener
        </listener-class>
    </listener>

</web-app>